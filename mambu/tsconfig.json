{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "jsxFactory": "h",
    "noEmitHelpers" : true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}